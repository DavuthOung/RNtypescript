{
  "env": {
      "browser": true,
      "es2021": true,
      "react-native/react-native": true
  },
  "parser": "babel-eslint",// To fix this "parser": "babel-eslint"
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "react-native"
  ],
  "rules": {
      "indent": [
          "error",
          4
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "no-unused-vars": 2,
      "no-var": 2,
      "no-multiple-empty-lines": 2,
      "react/jsx-uses-react": "error",//Use this prevent error when import React and not use
      "react/jsx-uses-vars": "error",
      "no-unexpected-multiline": "error",
      "react/jsx-curly-spacing": [2, {"when": "never", "allowMultiline": false}],
      "react/jsx-tag-spacing": 2,
      "react/jsx-props-no-multi-spaces": 2
  }
}
